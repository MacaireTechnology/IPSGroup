<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:background="@color/light_gray"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_time_in_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/timeinicon_color"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:id="@+id/tv_time_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09:41:29"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:padding="5dp"
                android:background="#ff8080"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_time_out_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/timeouticon_color"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:id="@+id/tv_time_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:41:29"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/tv_adjust_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:text="@string/adjust_icon"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_time_in_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/timeinicon_color"
                android:textColor="@color/mediumblue"
                android:textSize="16sp" />
            <TextView
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:id="@+id/tv_clock_in_loc_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fing_locationicon_color"
                android:textColor="@color/black" />
            <TextView
                android:layout_weight="1"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/tv_clock_in_loc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="hello world " />

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_circle_background_color="@color/light_gray"
                app:civ_border_color="@color/light_gray"
                app:civ_border_overlay="true"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/civ_in_time"
                android:layout_width="30sp"
                android:layout_height="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_time_out_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/timeouticon_color"
                android:textColor="@color/red_medium"
                android:textSize="16sp" />
            <TextView
                android:gravity="start"
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/tv_clock_out_loc_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fing_locationicon_color"
                android:textColor="@color/black" />
            <TextView
                android:layout_weight="1"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/tv_clock_out_loc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="hello world " />
            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_circle_background_color="@color/light_gray"
                app:civ_border_color="@color/light_gray"
                app:civ_border_overlay="true"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/civ_out_time"
                android:layout_width="30sp"
                android:layout_height="30sp"/>
        </LinearLayout>

    </LinearLayout>
    <uihelper.ripple.MaterialRippleLayout
        android:visibility="gone"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/lightblack"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </uihelper.ripple.MaterialRippleLayout>
</android.support.v7.widget.CardView>
