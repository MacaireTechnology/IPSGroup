<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/status"
            android:textColor="@color/lightblue" />
        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edt_bg_rect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_status_type"
                android:padding="6dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/select_leave_type"
                android:textColor="@color/gray" />
            <Spinner
                android:textSize="14sp"
                android:id="@+id/spinner_leave_type"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:padding="6dp"
                android:focusable="false"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/comments"
            android:textColor="@color/lightblue" />

        <EditText
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edt_bg_rect"
            android:hint="@string/comments_here"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:focusable="true"
            android:maxLength="120"
            android:maxLines="3"
            android:padding="10dp" />

        <uihelper.ripple.MaterialRippleLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleColor="@color/white"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:id="@+id/tv_update_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_round_"
                android:gravity="center"
                android:text="SUBMIT"
                android:textColor="@color/white" />

        </uihelper.ripple.MaterialRippleLayout>

    </LinearLayout>

</RelativeLayout>



