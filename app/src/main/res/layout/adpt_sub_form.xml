<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/light_gray"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sub_date_header"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="@string/submission_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_total_sub_header"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="@string/total_submission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_cv_short_header"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="@string/c_v_shortlisted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_interview_sec_header"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="@string/interview_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_select_candi_header"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="@string/selected_candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_offer_candi_header"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="@string/offered_candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_join_candi_header"
                android:padding="2dp"
                android:textColor="@color/white"
                android:text="@string/joined_candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sub_date"
                android:padding="2dp"
                android:textColor="@color/light_gray"
                android:text="@string/submission_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_total_sub"
                android:padding="2dp"
                android:textColor="@color/light_gray"
                android:text="@string/total_submission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_cv_short"
                android:padding="2dp"
                android:textColor="@color/light_gray"
                android:text="@string/c_v_shortlisted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_interview_sec"
                android:padding="2dp"
                android:textColor="@color/light_gray"
                android:text="@string/interview_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_select_candi"
                android:padding="2dp"
                android:textColor="@color/light_gray"
                android:text="@string/selected_candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_offer_candi"
                android:padding="2dp"
                android:textColor="@color/light_gray"
                android:text="@string/offered_candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_join_candi"
                android:padding="2dp"
                android:textColor="@color/light_gray"
                android:text="@string/joined_candidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>