<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/select_leave_type"
                android:textColor="@color/lightblue" />
        </LinearLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/edt_bg_rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_leave_type"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="@string/select_leave_type"
                        android:textColor="@color/gray" />
                    <Spinner
                        android:textSize="14sp"
                        android:id="@+id/spinner_leave_type"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:ems="10"
                        android:padding="6dp"
                        android:hint="@string/others"
                        android:focusable="false"
                        android:imeOptions="actionSearch"
                        android:inputType="textAutoComplete"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/from_date"
                        android:textColor="@color/lightblue" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="@string/to_date"
                        android:textColor="@color/lightblue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:id="@+id/tv_from_date"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edt_bg_rect"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/_2019_8_17" />
                    <TextView
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:id="@+id/tv_to_date"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edt_bg_rect"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/_2019_8_17" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/comments"
                    android:textColor="@color/lightblue" />

                <EditText
                    android:textSize="13sp"
                    android:layout_margin="5dp"
                    android:id="@+id/ed_app_leave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:focusable="true"
                    android:maxLines="3"
                    android:maxLength="120"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:padding="10dp"
                    android:hint="@string/leave_comments"/>
                <uihelper.ripple.MaterialRippleLayout
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/white"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">
                    <TextView
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp"
                        android:id="@+id/tv_apply_leave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_round_"
                        android:gravity="center"
                        android:text="@string/apply"
                        android:textColor="@color/white" />
                </uihelper.ripple.MaterialRippleLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</android.support.v7.widget.CardView>