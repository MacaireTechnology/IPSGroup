<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".teamPerformance.DailySales">
    <LinearLayout
        android:background="@drawable/bg_toolbar_color"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/back_icon"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <TextView
            android:id="@+id/tv_back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/back_icon"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/daily_sales"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/mobile_no"
                    android:textColor="@color/lightblue" />
                <TextView
                    android:layout_margin="8dp"
                    android:id="@+id/tv_mobile_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:focusable="false"
                    android:padding="8dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/customer_name"
                    android:textColor="@color/lightblue" />
                <TextView
                    android:layout_margin="8dp"
                    android:id="@+id/tv_cus_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:focusable="false"
                    android:padding="8dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/contact_person"
                    android:textColor="@color/lightblue" />
                <TextView
                    android:layout_margin="8dp"
                    android:id="@+id/tv_contact_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:focusable="true"
                    android:maxLength="120"
                    android:maxLines="3"
                    android:padding="8dp" />
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/landmark"
                    android:textColor="@color/lightblue" />
                <TextView
                    android:layout_margin="8dp"
                    android:id="@+id/tv_landmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:focusable="false"
                    android:padding="8dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/address"
                    android:textColor="@color/lightblue" />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:focusable="false"
                    android:padding="8dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/outlet_type"
                    android:textColor="@color/lightblue" />
                <TextView
                    android:id="@+id/tv_outlet_type"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:focusable="false"
                    android:padding="8dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/next_followup"
                    android:textColor="@color/lightblue" />
                <LinearLayout
                    android:id="@+id/ll_sub_date"
                    android:background="@drawable/edt_bg_rect"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="@string/dd_mm_yyyy"
                        android:id="@+id/tv_sub_date"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textColor="@color/six_e"/>
                    <TextView
                        android:id="@+id/tv_sub_date_icon"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/calendaricon_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="3"
                        android:padding="8dp"
                        android:textColor="@color/six_e"/>
                </LinearLayout>

                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/status"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/et_status"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/remark"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:id="@+id/et_remark"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <uihelper.ripple.MaterialRippleLayout
                    android:layout_margin="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/white"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">
                    <Button
                        android:id="@+id/tv_img_upload"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_round2"
                        android:gravity="center"
                        android:text="up"
                        android:textColor="@color/white" />
                </uihelper.ripple.MaterialRippleLayout>
                <uihelper.ripple.MaterialRippleLayout
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/white"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">
                    <TextView
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:id="@+id/tv_upload_sales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_round_"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/white" />
                </uihelper.ripple.MaterialRippleLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>

