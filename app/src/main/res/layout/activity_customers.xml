<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/bg_toolbar_color"
        android:id="@+id/back_icon"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="@string/back_icon"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/customers"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/customer_code"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:inputType="textPersonName"
                    android:layout_margin="8dp"
                    android:id="@+id/et_cus_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:focusable="true"
                    android:maxLength="120"
                    android:maxLines="1"
                    android:padding="6dp" />
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/customer_name"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:inputType="textPersonName"
                    android:layout_margin="8dp"
                    android:id="@+id/et_cus_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/mobile_no"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:id="@+id/et_mobile_no"
                    android:inputType="phone"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/email_id"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:id="@+id/et_mail_id"
                    android:inputType="textEmailAddress"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/contact_person"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:id="@+id/et_contact_person"
                    android:inputType="textPersonName"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/outlet_type"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:id="@+id/et_outlet_type"
                    android:inputType="textPersonName"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/landmark"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:id="@+id/et_landmark"
                    android:inputType="textPersonName"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/address"
                    android:textColor="@color/lightblue" />
                <EditText
                    android:id="@+id/et_address"
                    android:inputType="textPersonName"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_bg_rect"
                    android:ems="10"
                    android:padding="6dp"
                    android:textColor="@color/black"/>
                <uihelper.ripple.MaterialRippleLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="@color/white"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">
                    <TextView
                        android:id="@+id/tv_submit"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_round_"
                        android:gravity="center"
                        android:text="@string/submit"
                        android:textColor="@color/white" />
                </uihelper.ripple.MaterialRippleLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>

