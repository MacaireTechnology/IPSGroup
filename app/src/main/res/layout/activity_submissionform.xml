<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bg_toolbar_color"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:id="@+id/back_icon"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/back_icon"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_header_name"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/submission_form"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="@string/search_icon"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_back_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/back_icon"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:id="@+id/et_search"
                app:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColorHint="@color/white"
                android:hint="@string/search"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <uihelper.ripple.MaterialRippleLayout
        android:id="@+id/mrl_add_form"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        app:mrl_rippleAlpha="0.2"
        app:mrl_rippleColor="@color/white"
        app:mrl_rippleDelayClick="true"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">
        <TextView
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/tv_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_roundleave"
            android:text="@string/add_form"
            android:textColor="@color/white" />
    </uihelper.ripple.MaterialRippleLayout>
    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="1000"
        app:el_expanded="false"
        app:el_parallax="0.5">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/submission_date"
                        android:textColor="@color/lightblue" />
                    <LinearLayout
                        android:id="@+id/ll_sub_date"
                        android:background="@drawable/edt_bg_rect"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/dd_mm_yyyy"
                            android:id="@+id/tv_sub_date"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/six_e"/>
                        <TextView
                            android:id="@+id/tv_sub_date_icon"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/calendaricon_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:padding="8dp"
                            android:textColor="@color/six_e"/>
                    </LinearLayout>

                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/total_submission"
                        android:textColor="@color/lightblue" />

                    <EditText
                        android:id="@+id/et_total_submission"
                        android:inputType="textPersonName"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg_rect"
                        android:ems="10"
                        android:padding="6dp"
                        android:textColor="@color/six_e"/>

                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/c_v_shortlisted"
                        android:textColor="@color/lightblue" />
                    <EditText
                        android:inputType="textPersonName"
                        android:layout_margin="8dp"
                        android:id="@+id/et_cv_shortlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg_rect"
                        android:ems="10"
                        android:padding="6dp"
                        android:textColor="@color/six_e"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/interview_schedule"
                        android:textColor="@color/lightblue" />
                    <EditText
                        android:id="@+id/et_interview_sch"
                        android:inputType="textPersonName"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg_rect"
                        android:ems="10"
                        android:padding="6dp"
                        android:textColor="@color/six_e"/>
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/selected_candidate"
                        android:textColor="@color/lightblue" />
                    <EditText
                        android:id="@+id/et_select_candidate"
                        android:inputType="textPersonName"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg_rect"
                        android:ems="10"
                        android:padding="6dp"
                        android:textColor="@color/six_e"/>
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/offered_candidate"
                        android:textColor="@color/lightblue" />

                    <EditText
                        android:id="@+id/et_offered_candidate"
                        android:inputType="textPersonName"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg_rect"
                        android:ems="10"
                        android:padding="6dp"
                        android:textColor="@color/six_e"/>
                    <TextView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="@string/joined_candidate"
                        android:textColor="@color/lightblue" />
                    <EditText
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:id="@+id/et_join_candidate"
                        android:layout_margin="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edt_bg_rect"
                        android:ems="10"
                        android:padding="6dp"
                        android:textColor="@color/six_e"/>
                    <uihelper.ripple.MaterialRippleLayout
                        android:layout_margin="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="@color/white"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true">
                        <TextView
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:id="@+id/tv_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_round_"
                            android:gravity="center"
                            android:text="@string/submit"
                            android:textColor="@color/white" />
                    </uihelper.ripple.MaterialRippleLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </android.support.v7.widget.CardView>
    </net.cachapa.expandablelayout.ExpandableLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

